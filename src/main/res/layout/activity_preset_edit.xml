<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preset name" />

        <EditText
            android:id="@+id/editPresetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. Inventory Inbound" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Webhook URL" />

        <EditText
            android:id="@+id/editPresetUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://..."
            android:inputType="textUri" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Body template" />

        <EditText
            android:id="@+id/editPresetBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="4"
            android:maxLines="8"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:hint="Use {{code}} and {{quantity}} placeholders" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Description (optional)" />

        <EditText
            android:id="@+id/editPresetDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Short description" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancelPreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <Button
                android:id="@+id/btnSavePreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginStart="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
