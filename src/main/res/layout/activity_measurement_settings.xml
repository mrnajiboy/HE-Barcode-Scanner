<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Measurement System"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/radioGroupMeasurement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioMetric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Metric (kg, cm)"
            android:textSize="16sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/radioImperial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imperial (lbs, inches)"
            android:textSize="16sp"
            android:padding="12dp" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This affects:\n• Weight (kg vs lbs)\n• Dimensions (cm vs inches)"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnSaveMeasurement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        tools:ignore="VisualLintButtonSize" />

</LinearLayout>
